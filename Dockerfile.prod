FROM node:18-alpine

WORKDIR /app

COPY package*.json ./

RUN yarn

COPY . .

EXPOSE 3000

ARG NEXT_PUBLIC_GOOGLE_MAPS_API_KEY
ENV NEXT_PUBLIC_GOOGLE_MAPS_API_KEY=$NEXT_PUBLIC_GOOGLE_MAPS_API_KEY

ARG NEXT_PUBLIC_PARKING_DETECTION_URL
ENV NEXT_PUBLIC_PARKING_DETECTION_URL=$NEXT_PUBLIC_PARKING_DETECTION_URL

RUN yarn build

CMD ["yarn", "start"]